{% extends '@NteSite/Default/layout.site.html.twig' %}
{% block titulo %} Inscrição Realizada / {{ app.user.nome }}/{{ inscricao.uuid }} {% endblock %}
{% block chamada %}
    <div class="home-intro" id="home-intro">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <p>
                        Painel do candidato
                        <span># Inscrição Realizada </span>
                    </p>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block conteudo %}
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
    <div class="container">
        {{ include('@NteUsuario/Candidato/menu.html.twig') }}
        <div class="col-md-9">
            <div class="row">
                <h3 class="mb-xl">
                    Inscrição <strong>{{ inscricao.uuid }}</strong>
                </h3>
                <div class="row alert alert-info">
                    <div class="col-md-6 ">
                        <p><strong>Nome completo</strong><br>{{ inscricao.nome }}</p>
                        <p><strong>Data de Nascimento </strong><br>{{ inscricao.dataNascimento|date('d/m/Y') }}</p>
                        <p><strong> CPF</strong><br>{{ inscricao.cpf }}</p>
                        <p><strong> RG</strong><br>{{ inscricao.rgNro }}- {{ inscricao.rgOrgaoExpedidor }}</p>
                        <p><strong>Celular </strong><br>{{ inscricao.contatoTelefone1 }}</p>
                        <p><strong>Telefone</strong><br>{{ inscricao.contatoTelefone2 }}</p>
                        <p><strong> E-Mail</strong><br>{{ inscricao.contatoEmail }}</p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Endereço</strong><br>
                            Logradouro:{{ inscricao.enderecoLogradouro }}, N° {{ inscricao.enderecoNumero }}
                            <br>{{ inscricao.enderecoComplemento }}<br>
                            Bairro: {{ inscricao.enderecoBairro }}<br>
                            Cidade: {{ inscricao.enderecoMunicipio }}<br>
                            Estado: {{ inscricao.enderecoUf }}<br>
                            CEP: {{ inscricao.enderecoCep }}
                        </p>
                        <p>
                            <strong> {{ inscricao.idEdital.campoCargoTitulo??"Em qual cargo você está interessado??" }} </strong><br>
                            {{ inscricao.idCargo?inscricao.idCargo.descricao:"--" }}
                        </p>
                        <p>
                            <strong> {{ inscricao.idEdital.campoListaTitulo??"Em qual situação você se encaixa??" }}</strong><br>
                            {{ inscricao.idCota?inscricao.idCota.descricao: "--" }}
                        </p>
                        <p>
                            <strong>
                                <b>{{ inscricao.idEdital.titulo }}</b>
                            </strong>
                        </p>
                    </div>
                </div>
                <br>
                <br>
                <h4 class="text-primary">Tabela de Avaliação / Pontuação </h4><br>
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr class="text-center">
                        <th class="text-center ">Peso</th>
                        <th colspan="2" class="text-center">Pontuação</th>
                        <th class="text-center">Valor informado pelo candidato</th>
                        <th class="text-center">Valor considerado pelo avaliador</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for peso in inscricao.idEdital.pontuacaoCategoriaPeso %}
                        {% for categoria in peso.filhos %}
                            {% for p in categoria.pontuacao %}
                                <tr>
                                    <td class="text-center">
                                        {{ peso.descricao }}<br><br>
                                        ({{ peso.valorMaximo +0 }})
                                    </td>
                                    <td class="text-center">
                                        {{ categoria.descricao }}<br><br>
                                        ({{ categoria.valorMaximo +0 }}
                                        {{ categoria.valorTexto }})

                                    </td>
                                    <td class="text-center">
                                        {{ p.titulo }}<br><br>
                                        ({{ p.valorMaximo+0 }}
                                        {{ p.valorTexto }})
                                    </td>

                                    <td class="text-center">
                                        {% if inscricao.pontuacaoAvaliacaoItem(p).count %}
                                            {% if inscricao.pontuacaoAvaliacaoItem(p).first.idEtapa.periodoDivulgacao %}
                                                {% if inscricao.pontuacaoItem(p.id) %}
                                                    {{ inscricao.pontuacaoItem(p.id).valorInformado +0 }}
                                                    {{ p.valorTexto }}
                                                {% else %}
                                                    Não Informado/Não Divulgado
                                                {% endif %}
                                            {% else %}
                                                Não Informado/Não Divulgado
                                            {% endif %}
                                        {% else %}
                                            Não Informado/Não Divulgado
                                        {% endif %}
                                    </td>
                                    <td class="text-center" style="color: #0a6aa1;">
                                        {% if inscricao.pontuacaoAvaliacaoItem(p).count %}
                                            {% if inscricao.pontuacaoAvaliacaoItem(p).first.idEtapa.periodoDivulgacao %}
                                                {% if (p.pontuacaoAuto==0 or inscricao.pontuacaoAvaliacaoItem(p).first.considerado) and inscricao.idSituacao != 1 and inscricao.idSituacao != 3 %}
                                                    {{ inscricao.pontuacaoAvaliacaoItemValor(p) }}
                                                {{ p.valorTexto }}
                                                {% else %}
                                                    0 {{ p.valorTexto }}.
                                                {% endif %}
                                            {% else %}
                                                Não Informado/Não Divulgado
                                            {% endif %}
                                        {% else %}
                                            Não Informado/Não Divulgado
                                        {% endif %}

                                    </td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
                <br>
                <h4 class="text-primary ">Parecer do avaliador:</h4>
                {% for etapa in inscricao.idEdital.etapaCronologica if etapa.tipo == 3  and etapa.periodoDivulgacao %}
                    <h5 class="text-primary text-weight-bold">{{ etapa.descricao }}</h5>
                    {% for f in inscricao.feedbackEtapa(etapa) %}
                        <blockquote>
                            {{ f.feedback }}
                        </blockquote>
                    {% endfor %}
                    <br><br>
                    <br><br>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block jsOpcional %}
    <script src="{{ asset('assets/vendor/jquery.rowspanizer/jquery.rowspanizer.min.js') }}"></script>
{% endblock %}
{% block js %}
    <script>
        $("table").rowspanizer({
            vertical_align: 'middle',
            columns: [0, 1]
        });
    </script>
{% endblock %}