{% extends 'base.admin.html.twig' %}
{% block titulo %} Edital N° {{ frigaedital.titulo }}{% endblock %}
{% block breadcumbsTitulo %}Avaliadores {% endblock %}
{% block conteudo %}
    <div class="row">
        {{ include('@NteAplicacaoFriga/edital/menu.html.twig', {entidade: frigaedital}) }}
        <div class="col-md-10">
            <section class="panel-body">
                {% if frigaedital.idEditalUsuario|length %}
                    <table class="table table-hover table-condesed ">
                        <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Banca</th>
                            <th>
                                <a href="{{ path('edital_avaliador_adicionar',{uuid: frigaedital.uuid}) }}"
                                   class="btn btn-primary pull-right">
                                    <i class="fa fa-plus-circle"></i> Adicionar
                                </a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for usuario in frigaedital.idEditalUsuario %}
                            <tr>
                                <td>
                                    {{ usuario.idUsuario.nome }}<br>
                                    <small>
                                        <a title="Clique aqui para ver o histórico de acessos." href="#">
                                        <i class="fa fa-clock-o"></i>
                                        {{ usuario.idUsuario.lastLogin|date('d/m/Y H:i:s') }}
                                        </a>
                                    </small>
                                </td>
                                <td>
                                    {% if usuario.idEditalCargo|length %}
                                        {% for c in usuario.idEditalCargo %}
                                            {{ c.descricao }},
                                        {% endfor %}
                                    {% else %}
                                        Sem Banca
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm pull-right">
                                        <a class="btn btn-default"
                                           href="{{ path('edital_avaliador_editar',{uuid: frigaedital.uuid, avaliador: usuario.id}) }}">
                                            <i class="fa fa-edit"></i> Editar
                                        </a>
                                        <a class="btn btn-default"
                                           href="{{ path('edital_avaliador_remover',{uuid: frigaedital.uuid, avaliador: usuario.id}) }}">
                                            <i class="fa fa-times-circle"></i> Remover
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <section class="body-error error-inside">
                        <div class="center-error">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="main-error mb-xlg">
                                        <h2 class="error-code text-dark text-center text-weight-semibold m-none">
                                            <i class="fa fa-users text-primary"></i>
                                        </h2>
                                        <p class="error-explanation text-center text-primary">
                                            <br><b>Nenhum avaliador disponível para este edital </b> até o momento.<br>
                                            <br>
                                            <br>
                                            <a href="{{ path('edital_avaliador_adicionar',{uuid: frigaedital.uuid}) }}"
                                               class="btn btn-primary">
                                                <i class="fa fa-plus-circle"></i> Adicionar Avaliadores
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                {% endif %}
            </section>
        </div>
    </div>
{% endblock %}