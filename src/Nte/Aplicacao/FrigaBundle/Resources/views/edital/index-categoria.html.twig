{% extends 'base.admin.html.twig' %}
{% block titulo %} Edital/Categorias{% endblock %}
{% block breadcumbsTitulo %} Categorias {% endblock %}
{% block conteudo %}
    <div class="row">
        <div class="col-md-12">
            <section class="panel-body">
                {% if categoria|length %}
                    <table class="table table-hover table-condesed ">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Categoria</th>
                            <th>
                                <a href="{{ path('edital_categoria_criar') }}"
                                   class="btn btn-primary pull-right">
                                    <i class="fa fa-plus-circle"></i> Adicionar
                                </a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in categoria %}
                            <tr>
                                <td>{{ c.id }}</td>
                                <td>{{ c.descricao }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm pull-right">
                                        <a class="btn btn-default"
                                           href="{{ path('edital_categoria_editar',{id: c.id}) }}">
                                            <i class="fa fa-edit"></i> Editar
                                        </a>
                                        <a class="btn btn-default"
                                           href="{{ path('edital_categoria_remover',{id: c.id}) }}">
                                            <i class="fa fa-edit"></i> Remover
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <section class="body-error error-inside">
                        <div class="center-error">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="main-error mb-xlg">
                                        <h2 class="error-code text-dark text-center text-weight-semibold m-none">
                                            <i class="icon icon-settings text-primary"></i>
                                        </h2>
                                        <p class="error-explanation text-center text-primary">
                                            <br><b>Nenhuma categoria foi criada </b> at√© o momento.<br>
                                            <br>
                                            <br>
                                            <a href="{{ path('edital_categoria_criar') }}" class="btn btn-primary">
                                                <i class="fa fa-plus-circle"></i> Criar Categoria
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                {% endif %}
            </section>
        </div>
    </div>
{% endblock %}