{% extends 'base.admin.html.twig' %}
{% block titulo %} Edição de Pontuação{% endblock %}
{% block breadcumbsTitulo %}Edição de Pontuação{% endblock %}
{% block conteudo %}
    <div class="row">
        {{ include('@NteAplicacaoFriga/edital/menu.html.twig', {entidade: frigaedital}) }}
        <div class="col-md-10">
            {% if frigaeditalpontuacao.id %}
                <div class="panel-body text-right">
                    <a class="btn btn-danger " href="{{ path('edital_pontuacao_categoria_remover', {'pontuacaoCategoria': frigaeditalpontuacao.id , 'uuid': frigaedital.uuid}) }}">
                        Remover
                    </a>
                </div>
                <br>
            {% endif %}
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_rest(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary center-block"><i class="fa fa-save"></i> Salvar
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts2 %}
    <script>
        $('select').select2({
            placeholder: "Selecione um categoria",
            allowClear: true,
        });
    </script>
{% endblock %}
